<Page x:Class="BigMountainX.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:BigMountainX"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image Source="https://peach.blender.org/wp-content/uploads/bbb-splash.png"
               Stretch="None" />
        <Image Source="https://peach.blender.org/wp-content/uploads/bbb-splash.png"
               Grid.Column="1"
               Stretch="Uniform" />
        <Image Source="https://peach.blender.org/wp-content/uploads/bbb-splash.png"
               Grid.Column="2"
               Stretch="UniformToFill" />
        <Image Source="https://peach.blender.org/wp-content/uploads/bbb-splash.png"
               Grid.Column="3"
               Stretch="Fill" />
        <Button x:ConnectionId='1' Margin="10"
                HorizontalAlignment="Center"
                Grid.ColumnSpan="4"
                Grid.Row="1"
                Content="Test Image Capture"
                                              />
        <Button x:ConnectionId='2' Margin="10"
                HorizontalAlignment="Center"
                Grid.ColumnSpan="4"
                Grid.Row="1"
                Content="Test Image Capture"
                                          />

        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="1">
            <Button x:ConnectionId='3' Margin="10"
                    Content="Text Toast"
                                        />

            <Button x:ConnectionId='4' Margin="10"
                    Content="Text / Image Toast"
                                             />

            <Button x:ConnectionId='5' Margin="10"
                    Content="Sound Toast"
                                         />

            <Button x:ConnectionId='6' Margin="10"
                    Content="Schedule Toast"
                                            />

            <Button x:ConnectionId='7' Margin="10"
                    Content="Text / Image Toast"
                                                  />

            <Button x:ConnectionId='8' Margin="10"
                    Content="Adaptive Toast"
                                            />
        </StackPanel>

        
    </Grid>
</Page>

