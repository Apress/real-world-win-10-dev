<Page x:ConnectionId='1' xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:BigMountainX"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:lib="using:General.UWP.Library"
      x:Class="BigMountainX.UserIntroPage"
      mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  VerticalScrollMode="Auto"
                  Background="#FF6A6A6A">
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center">
            <lib:ImageViewerControl x:ConnectionId='2'  HorizontalAlignment="Left"
                                     Margin="10"
                                     Height="200"
                                     Width="200"
                                                                     />

            <StackPanel Width="400"
                        HorizontalAlignment="Left">
                <TextBox x:ConnectionId='6' Header="First Name"
                         Margin="10"
                                                                        />
                <TextBox x:ConnectionId='7' Header="Last Name"
                         Margin="10"
                                                                       />
                <TextBox x:ConnectionId='8' Header="Email Address"
                         Margin="10"
                                                                    />
                <TextBox x:ConnectionId='9' Header="Contact Number"
                         Margin="10"
                                                                            />
            </StackPanel>

            <DatePicker x:ConnectionId='3' x:Name="control_dob"
                        Header="When were you born?"
                        HorizontalAlignment="Left"
                        Margin="10"
                                                   
                        VerticalAlignment="Top" />

            <ComboBox x:ConnectionId='4' x:Name="control_procedure"
                      Header="Gender"
                      HorizontalAlignment="Left"
                      Margin="10"
                                                         
                      VerticalAlignment="Top"
                      Width="296"
                                                                  />
            <Button x:ConnectionId='5' Content="Continue"
                    Margin="10"
                    Background="Gray"
                                       />
        </StackPanel>

    </ScrollViewer>
</Page>

