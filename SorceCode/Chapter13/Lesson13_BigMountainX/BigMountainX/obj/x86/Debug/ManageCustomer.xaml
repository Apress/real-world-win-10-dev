<Page x:Class="BigMountainX.ManageCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:BigMountainX"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Grid Background="#FF6A6A6A">
        <ScrollViewer>
            <StackPanel Margin="20" HorizontalAlignment="Center"
                        Orientation="Vertical">

                <Button x:ConnectionId='6'                     
                        HorizontalAlignment="Left"
                        Height="227"
                        Margin="10"
                        VerticalAlignment="Top"
                        Width="225"
                        BorderThickness="1"
                        BorderBrush="Gray"
                        Background="Gainsboro">
                    <Image x:ConnectionId='12' x:Name="control_image"
                           Source="/alex.jpg" />
                </Button>
                <TextBox x:ConnectionId='7' x:Name="txt_name"
                         Header="Name"
                         Margin="10"
                         Width="225"
                         HorizontalAlignment="Left" />
                <TextBox x:ConnectionId='8' x:Name="txt_email"
                         Header="Email Address"
                         Margin="10"
                         Width="225"
                         HorizontalAlignment="Left" />
                <DatePicker x:ConnectionId='9' Margin="10"
                            x:Name="control_dob"
                            Header="When were you born?"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top" />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='10' Margin="10"
                            Content="Save"
                            Width="100"
                                                 />
                    <Button x:ConnectionId='11' Margin="10"
                            Width="100"
                            Content="Cancel"
                                                   />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Grid x:ConnectionId='1' x:Name="grid_overlay"
              Background="Gray" 
              >
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBox x:ConnectionId='2' x:Name="txt_token"
                         Header="Token ID"
                         Margin="10"
                         Width="225"
                         HorizontalAlignment="Left" />
                <Button x:ConnectionId='3' Margin="10"
                        Content="Load Customer"
                        Width="150"
                                          />
                <Button x:ConnectionId='4' Margin="10"
                        Content="New Customer"
                        Width="150"
                                          />
                <Button x:ConnectionId='5' Margin="10"
                        Content="Load Cached Customer"
                        Width="150"
                                                     />
            </StackPanel>
        </Grid>
    </Grid>
</Page>

